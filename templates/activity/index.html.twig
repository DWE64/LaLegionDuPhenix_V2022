{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block section %}
<div class="container-fluid js-manage-game mx-0 px-0">

    <!-- start page title -->
    <div class="row mx-0 px-0 activity_header_row">
        <div class="col-12">
            <div class="page-title-box align-middle">
                <h1 class="activity_title mt-5">{{ title }}</h1>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row my-2">
        <div class="col-sm-8">
            <div class="text-sm-end">
                <div class="btn-group mb-3">
                    <button type="button" class="btn btn-primary button-filter" data-filter="all">{{ 'activity.filter_all'|trans }}</button>
                </div>
                <div class="btn-group mb-3 ms-1">
                    <button type="button" class="btn btn-light button-filter" data-filter="NEW_GAME">{{ 'activity.filter_new'|trans }}</button>
                    <button type="button" class="btn btn-light button-filter" data-filter="ACTIVE_GAME">{{ 'activity.filter_ongoing'|trans }}</button>
                    <button type="button" class="btn btn-light button-filter" data-filter="FINISH_GAME">{{ 'activity.filter_finish'|trans }}</button>
                </div>
            </div>
        </div><!-- end col-->
    </div>
    <!-- end row-->

    <div class="row mx-0 px-2 list-game">
        {% if games is not empty %}
            {% for game in games %}
                {% if game.picture is defined and game.picture is not null %}
                    {% include 'activity/_template_game_card_with_picture.html.twig' %}
                {% else %}
                    {% include 'activity/_template_game_card_without_picture.html.twig' %}
                {% endif %}
            {% endfor %}
        {% endif %}
    </div>
    {% endblock %}
    {% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('activityApp') }}
    {{ encore_entry_script_tags('activityWrapper') }}
{% endblock %}