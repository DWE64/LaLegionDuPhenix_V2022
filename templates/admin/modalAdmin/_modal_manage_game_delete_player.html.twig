{% block buttonModalManageGameDeletePlayer %}
    <button type="button" class="dropdown-item btn btn-modal button-modal-delete-player" data-bs-toggle="modal"
            data-bs-target="#game-manage-modal-delete-player-{{ game.id }}"
            data-url="{{ path('app_admin_manage_game_get_player',{gameId: game.id}) }}"
            >
        <i class="mdi mdi-account-remove me-1"></i>{{ 'admin.game.delete_user'|trans }}
    </button>
{% endblock %}
{% block modalManageGameDeletePlayer %}
    <div id="game-manage-modal-delete-player-{{ game.id }}" class="modal fade game-manage-modal-delete-player-{{ game.id }}"
         tabindex="-1" role="dialog"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content js-manage-game-delete-player">

                <div class="modal-body">
                    <div class="text-center mt-2 mb-4">
                        <a href="{{ path('app_home_admin') }}">
                            <span><img src="{{ asset('/logo/logo_horizontal_black.svg') }}" alt="" height="125"></span>
                        </a>
                    </div>

                    <form id="delete_player_game_form_{{ game.id }}" class="ps-3 pe-3 delete_player_game_form" role="form"
                          method="DELETE"
                          action="{{ path('app_admin_manage_game_delete_player',{gameId: game.id}) }}"
                          data-url="{{ path('app_admin_manage_game_delete_player',{gameId: game.id}) }}"
                          data-id-game="{{ game.id }}"
                    >

                        <p class="text-center mt-2 mb-4">{{ 'admin.game.manage.delete_game_player'|trans }}</p>

                    </form>

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

{% endblock %}